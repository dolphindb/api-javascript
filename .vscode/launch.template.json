{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current TS File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["./node_modules/ts-node/dist/bin-esm.js"],
            "args": ["${file}"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        }
    ]
}